# Qdrant
QDRANT_API_KEY=changeme-long-random
QDRANT_HOST=http://localhost:6333

# Collection (single or named mode)
COLLECTION_NAME=pkc_items
VECTORS_MODE=single        # single | named

# --- SINGLE VECTOR (e.g. BGE-M3) ---
VECTOR_SIZE=1024
VECTOR_DISTANCE=Cosine     # Cosine | Euclid | Dot

# --- NAMED VECTORS (optional) ---
# Example: {"m3":{"size":1024,"distance":"Cosine"},"e5":{"size":384,"distance":"Cosine"}}
NAMED_VECTORS_JSON={"m3":{"size":1024,"distance":"Cosine"},"e5":{"size":384,"distance":"Cosine"}}

# HNSW / optimization
HNSW_M=16
HNSW_EF_CONSTRUCT=100
INDEXING_THRESHOLD=10000    # bulk import: index build threshold